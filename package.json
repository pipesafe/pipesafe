{
  "name": "tmql",
  "version": "0.4.0",
  "description": "Typed Mongo Query Language - Fully type-safe MongoDB aggregation builder for TypeScript projects",
  "author": "Ryan Peggs & Tim Vyas",
  "license": "Elastic-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/covahltd/tmql.git"
  },
  "keywords": [
    "mongodb",
    "aggregation",
    "typescript",
    "builder",
    "type-safe",
    "mongo"
  ],
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "packageManager": "bun@1.2.17",
  "engines": {
    "node": "22.11.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.30.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.0.15",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "lefthook": "^2.0.4",
    "mongodb-memory-server": "^10.2.3",
    "prettier": "^3.6.2",
    "ts-morph": "^26.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "mongodb": "^6.17.0"
  },
  "scripts": {
    "build": "bun run tsc",
    "watch": "bun run tsc --watch",
    "prepare": "bunx lefthook install",
    "prepublishOnly": "bun run build",
    "changeset": "changeset",
    "changeset:status": "changeset status --since=origin/main",
    "version": "changeset version",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  }
}
