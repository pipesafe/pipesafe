{
  "name": "tmql-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Typed Mongo Query Language - Monorepo for tmql packages",
  "author": "Ryan Peggs & Tim Vyas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/covahltd/tmql.git"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.2.17",
  "engines": {
    "node": "22.11.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.30.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.0.15",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "lefthook": "^2.0.4",
    "mongodb-memory-server": "^10.2.3",
    "prettier": "^3.6.2",
    "ts-morph": "27.0.2",
    "tsx": "^4.20.3",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^4.0.15"
  },
  "scripts": {
    "build": "bun run build:packages",
    "build:packages": "tsc --build --force",
    "build:watch": "tsc --build --watch packages/tmql packages/tmql-orchestration",
    "clean": "rm -rf packages/*/dist",
    "prepare": "bunx lefthook install",
    "changeset": "changeset",
    "changeset:status": "changeset status --since=origin/main",
    "version": "changeset version",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit --project tsconfig.json"
  }
}
